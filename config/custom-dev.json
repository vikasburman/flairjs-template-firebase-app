{
    "plugins": [
        { "name": "node_modules", "file": "node_modules.js", "settings": { "cmd": "yarn install --prod" } },
        { "name": "web_modules", "file": "web_modules.js" },
        { "name": "copy_files", "file": "copy_files.js" },
        { "name": "minify_files", "file": "minify_files.js" },
        { "name": "write_env", "file": "write_env.js" }        
    ],    
    "build": [
        { "profile": "database" },
        { "profile": "firebase" },
        { "profile": "firestore" },
        { "profile": "functions" },
        { "profile": "hosting_fbsite1" },
        { "profile": "hosting_fbsite2" },
        { "profile": "mobile" },
        { "profile": "storage" }
    ],
    "profiles": {
        "database": {
            "root": "database",
            "dest": "/database",
            "plugins": ["copy_files"],
            "copy": [
                "database.rules.json"
            ]
        },          
        "firebase": {
            "root": "firebase",
            "dest": "/",
            "plugins": ["copy_files"],
            "copy": [
                "firebase.json",
                ".firebaserc"
            ]
        },      
        "firestore": {
            "root": "firestore",
            "dest": "/firestore",             
            "plugins": ["copy_files"],
            "copy": [
                "firestore.indexes.json",
                "firestore.rules"
            ]
        }, 
        "functions": {
            "root": "functions",
            "dest": "/functions",
            "omitRoot": true,
            "skipMinify": true,
            "build": [
                "app",
                "shared",
                "fbapp1",
                "fbapp2"
            ],
            "plugins": ["copy_files", "node_modules", "write_env"],
            "copy": [
                "private",
                "appConfig.json",
                "functions.json",
                "main.js"
            ],
            "env": {
                "type": "server",
                "vars": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG",
                    "FIREBASE_PROJECT_ID": "flairjs-firebase-app"
                }
            }            
        },        
        "hosting_fbsite1": {
            "root": "hosting/fbsite1",
            "dest": "/hosting/fbsite1",
            "omitRoot": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "web_modules", "minify_files", "write_env"],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "modules": [
                "flairjs",
                "flairjs-fabric",
                "requirejs",
                "vue/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ],
            "env": {
                "type": "client",
                "vars": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                }
            }            
        },
        "hosting_fbsite2": {
            "root": "hosting/fbsite2",
            "dest": "/hosting/fbsite2",
            "omitRoot": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "web_modules", "minify_files", "write_env"],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "modules": [
                "flairjs",
                "flairjs-fabric",
                "requirejs",
                "vue/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ],
            "env": {
                "type": "client",
                "vars": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                }
            }            
        },     
        "mobile": {
            "root": "mobile",
            "dest": "/mobile",             
            "plugins": []
        },            
        "storage": {
            "root": "storage",
            "dest": "/storage",            
            "plugins": ["copy_files"],
            "copy": [
                "storage.rules"
            ]
        }        
    }
}