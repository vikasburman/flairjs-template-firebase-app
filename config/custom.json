{
    "plugins": [
        { "name": "docker_image", "file": "docker_image.js", "settings": { "cmd": "" } },
        { "name": "node_modules", "file": "node_modules.js", "settings": { "cmd": "yarn install --prod" } },
        { "name": "web_modules", "file": "web_modules.js" },
        { "name": "copy_files", "file": "copy_files.js" },
        { "name": "minify_files", "file": "minify_files.js" }
    ],    
    "build": [
        { "profile": "firebase" },
        { "profile": "database" },
        { "profile": "storage" },
        { "profile": "firestore" },
        { "profile": "functions" },
        { "profile": "hosting" }
    ],
    "profiles": {
        "firebase": {
            "dest": "/",
            "plugins": ["copy_files"],
            "copy": [
                "firebase.json",
                ".firebaserc"
            ]
        },      
        "database": {
            "plugins": ["copy_files"],
            "copy": [
                "database.rules.json"
            ]
        },  
        "storage": {
            "plugins": ["copy_files"],
            "copy": [
                "storage.rules"
            ]
        },                   
        "firestore": {
            "plugins": ["copy_files"],
            "copy": [
                "firestore.indexes.json",
                "firestore.rules"
            ]
        },                   
        "functions": {
            "root": "server",
            "dest": "/functions",
            "omitRoot": true,
            "skipMinify": true,
            "build": [
                "app",
                "cron",
                "direct",
                "http",
                "trigger"
            ],
            "plugins": ["copy_files", "node_modules"],
            "copy": [
                "private",
                "appConfig.json",
                "firebaseConfig.json",
                "functionsConfig.json",
                "main.js"
            ]
        },
        "hosting": {
            "root": "www",
            "dest": "/public",
            "omitRoot": true,
            "build": [
                "app",
                "services",
                "views"
            ],
            "plugins": ["copy_files", "web_modules", "minify_files"],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "modules": [
                "flairjs",
                "flairjs-fabric",
                "requirejs",
                "vue/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ]
        }
    }
}