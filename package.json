{
    "name": "yourapp",
    "title": "yourapp name",
    "description": "yourapp description",
    "copyright": "yourapp copyright",
    "version": "0.9.204",
    "author": "yourapp author <yourapp@yourhost.domain>",
    "keywords": [
        "flairjs",
        "javascript",
        "yourapp keyword1",
        "yourapp keyword2"
    ],
    "engines": {
        "node": "10"
    },
    "main": "main.js",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "yourapp giturl"
    },
    "scripts": {
        "build": "flair build --options ./config/build/options.json",
        "build-full": "flair build --options ./config/build/options.json --full",
        "build-quick": "flair build --options ./config/build/options.json --quick",
        "build-dev": "flair build --options ./config/build/options.json --flag dev",
        "build-dev-full": "flair build --options ./config/build/options.json --full --flag dev",
        "build-dev-quick": "flair build --options ./config/build/options.json --quick --flag dev",
        "build-prod": "flair build --options ./config/build/options.json --flag prod",
        "build-prod-full": "flair build --options ./config/build/options.json --full --flag prod",
        "build-prod-quick": "flair build --options ./config/build/options.json --quick --flag prod",
        "flag": "flair flag --options ./config/build/options.json",
        "test": "flair test --options ./config/test/options.json",
        "test-client": "flair test --options ./config/test/options.json --client",
        "serve": "cd ./dist && firebase serve --project dev",
        "deploy": "cd ./dist && firebase deploy --project dev",
        "deploy-fb1": "cd ./dist && firebase deploy --project dev --only firestore,database,storage,hosting:fbsite1,functions:fbapp1",
        "deploy-fb2": "cd ./dist && firebase deploy --project dev --only firestore,database,storage,hosting:fbsite2,functions:fbapp2",
        "deploy-prod": "cd ./dist && firebase deploy --project prod",
        "deploy-prod-fb1": "cd ./dist && firebase deploy --project prod --only firestore,database,storage,hosting:fbsite1,functions:fbapp1",
        "deploy-prod-fb2": "cd ./dist && firebase deploy --project prod --only firestore,database,storage,hosting:fbsite2,functions:fbapp2"
    },
    "devDependencies": {
        "flairjs-cli": "^0.55.85"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "flairjs": "^0.55.68",
        "flairjs-fabric": "^0.55.70",
        "firebase": "^6.3.4",
        "firebase-admin": "^8.3.0",
        "firebase-functions": "^3.2.0",
        "http-shutdown": "^1.2.1",
        "node-env-file": "^0.1.8",
        "node-fetch": "^2.6.0",
        "requirejs": "^2.3.6",
        "vue": "^2.6.10"
    }
}