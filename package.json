    "scripts": {
        "build": "gulp build --options ./config/build.json",
        "build-full": "gulp build --full --options ./config/build.json",
        "build-quick": "gulp build --quick --options ./config/build.json",
        "test": "gulp test --TEST --options ./config/test.json",
        "test-client": "gulp test --TEST --client --options ./config/test.json",
        "serve": "cd ./dist && firebase serve",
        "deploy": "cd ./dist && firebase deploy --project dev",
        "deploy-fb1": "cd ./dist && firebase deploy --project dev --only firestore,database,storage,hosting:fbsite1,functions:fbapp1",
        "deploy-fb2": "cd ./dist && firebase deploy --project dev --only firestore,database,storage,hosting:fbsite2,functions:fbapp2"
    },
