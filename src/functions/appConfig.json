{
    "global": {
        "flair": {
        }
    },

    
    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "preambles": [
                "./app",
                "./shared",
                "./fbapp1",
                "./fbapp2"
            ],     
            "ports": {
            },       
            "bootwares": [
                "flair.boot.NodeEnv",
                "flair.boot.Middlewares",
                "flair.boot.ResHeaders",
                "flair.boot.DIContainer",
                "flair.boot.ServerRouter"
            ]
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.server": {
        "firebase": {
            "firebaseApps": "./private/firebaseApps.json",
            "serviceAccount": "./private/serviceAccount-Local.json"
        },

        "envVars": {
            "vars": [
                "./private/.env"
            ]
        },

        "routing": {
            "mounts": {
                "main": "/",
                "fbapp1": "/fbapp1/api/",
                "fbapp2": "/fbapp2/api/"
            },
            "all": {
                "before": {
                    "settings": [
                        { "name": "case sensitive routing", "value": false },
                        { "name": "strict routing", "value": false }
                    ],
                    "middlewares": [
                    ],  
                    "interceptors": [
                    ],          
                    "resHeaders": [
                    ]
                },
                "after": {
                    "settings": [
                    ],
                    "middlewares": [
                    ],  
                    "interceptors": [
                    ],          
                    "resHeaders": [
                        { "name": "X-Built-On", "value": "flairjs" },
                        { "name": "Access-Control-Allow-Origin", "value": "*" }
                    ]
                }
            },
            "main": {
                "settings": [
                ],
                "middlewares": [
                ],  
                "interceptors": [
                ],          
                "resHeaders": [
                ]
            },
            "fbapp1": {
                "settings": [
                ],
                "middlewares": [
                    { "name": "cors", "args": [{ "origin": ["*"] }] }
    
                ],  
                "interceptors": [
                ],          
                "resHeaders": [
                ]
            },
            "fbapp2": {
                "settings": [
                ],
                "middlewares": [
                    { "name": "cors", "args": [{ "origin": ["*"] }] }
                ],  
                "interceptors": [
                ],          
                "resHeaders": [
                ]
            }
        }
    }
}