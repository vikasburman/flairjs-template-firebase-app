{
    "functions": [
        {   "enabled": true, 
            "type": "http", 
            "name": "api",
            "config": {
                "region": "us-east1"
            }
        },
        {   "enabled": false, 
            "type": "http", 
            "name": "capi",
            "config": {
                "region": "us-east1",
                "runtimeOpts": {
                    "timeoutSeconds": 300,
                    "memory": "1GB"
                }
            }
        },
        {   "enabled": false, 
            "type": "direct", 
            "name": "<funcName>",
            "handler": "<qualifiedTypeName>"
        },
        {   "enabled": false, 
            "type": "cron", 
            "name": "<funcName>",
            "handler": "<qualifiedTypeName>", 
            "config": {
                "when": "every 5 minutes", 
                "timeZone": "America/New_York"
            }
        },
        {   "enabled": false, 
            "type": "trigger", 
            "name": "<funcName>",
            "source": "<sourceType>", 
            "trigger": "<triggerType>",
            "handler": "<qualifiedTypeName>",
            "config": {}
        }        
    ]
}

