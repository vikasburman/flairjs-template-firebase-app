{
    "global": {
        "flair": {
            "api": {
                "connections": {
                    "auto": "/fbapp1/api/",
                    "example1": {
                        "host": {
                            "local": "http://localhost:5001/:project/:geo",
                            "dev": "https://:geo-:project.cloudfunctions.net",
                            "stage": "",
                            "prod": ""
                        },
                        "project": "flairjs-firebase-app",
                        "geo": "us-east1"
                    }
                }
            }     
        }    
    },

    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "env": {
                "isVue": true
            },            
            "links": [
                { "rel": "stylesheet", "href": "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" },
                { "rel": "stylesheet", "href": "./assets/css/styles.css" }
            ],
            "scripts": [
            ],
            "preambles": [
                "./app",
                "./features"
            ],
            "ports": {
            },       
            "bootwares": [
                "flair.boot.DIContainer",
                "flair.boot.VueSetup",
                "flair.boot.ClientRouter"
            ],
            "assemblies": [
            ]            
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "preambles": [
                "./app",
                "./features"
            ],
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.client": {
        "view": {
            "transition": "",
            "routes": {
                "home": "myapp.feature1.views.home",
                "notfound": "myapp.feature1.views.notfound"
            }
        }, 

        "i18n": {
            "lang": {
                "default": "en",
                "locales": [
                    { "code": "en", "name": "English", "native": "English" },
                    { "code": "hi", "name": "Hindi", "native": "हिंदी" }
                ]
            }
        },

        "routing": {
            "mounts": {
                "main": "/"
            },
            "all": {
                "before": {
                    "settings": [
                        { "name": "hashbang", "value": false },
                        { "name": "lang", "value": false },
                        { "name": "sensitive", "value": false }
                    ],
                    "interceptors": [
                    ]
                },
                "after": {
                    "settings": [
                    ],
                    "interceptors": [
                    ]
                }
            },
            "main": {
                "settings": [
                ],
                "interceptors": [
                ]
            }
        }
    },

    "flair.client.vue": {
        "vue": {
            "extensions": []
        }
    }
}