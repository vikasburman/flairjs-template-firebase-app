{
    "flair": {
        "api": {
            "connections": {
            }
        }     
    },
    
    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "files": [
            ],
            "preambles": [
                "flairjs-fabric",
                "./app",
                "./features"
            ],            
            "bootwares": [
                "flair.boot.NodeEnv",
                "flair.boot.Middlewares",
                "flair.boot.ResHeaders",
                "flair.boot.DIContainer",
                "flair.boot.ServerRouter"
            ]
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "files": [
            ],
            "preambles": [
                "./app",
                "./features"
            ],            
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.server": {
        "envVars": {
            "vars": [
                "./private/.env"
            ]
        },

        "routing": {
            "mounts": {
                "main": "/",
                "api": "/api/"
            },
            "main-settings": [
                { "name": "case sensitive routing", "value": false },
                { "name": "strict routing", "value": false }
            ],
            "main-middlewares": [
                { "name": "cors", "args": [{ "origin": true }] }
            ],  
            "main-interceptors": [
            ],          
            "main-resHeaders": [
                { "name": "X-Built-On", "value": "flairjs" },
                { "name": "Access-Control-Allow-Origin", "value": "*" }
            ],
            "api-settings": [
                { "name": "case sensitive routing", "value": false },
                { "name": "strict routing", "value": false }
            ],
            "api-middlewares": [
                { "name": "cors", "args": [{ "origin": true }] }
            ],  
            "api-interceptors": [
            ],          
            "api-resHeaders": [
                { "name": "X-Built-On", "value": "flairjs" },
                { "name": "Access-Control-Allow-Origin", "value": "*" }                
            ]                         
        }
    }

}