{
    "global": {
        "api": {
            "roots": {
                "local": "http://localhost:5001/flairjs-firebase-app/us-east1/",
                "dev": "https://us-east1-flairjs-firebase-app.cloudfunctions.net/",
                "test": "",
                "prod": ""
            },
            "version": "v1"
        }
    },

    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "files": [
            ],
            "preambles": [
                "flairjs-fabric",
                "./app",
                "./services",
                "./views"
            ],
            "bootwares": [
                "flair.boot.DIContainer",
                "flair.boot.vue.VueSetup",
                "flair.boot.ClientRouter"
            ]
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "files": [
            ],
            "preambles": [
                "./app",
                "./services"
            ],
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.client": {
        "view": {
            "el": "main",
            "title": "My App",
            "transition": ""
        },      
        
        "ui": {
            "vue": {
                "extensions": []
            }
        },

        "routes": {
            "home": "myapp.views.home",
            "notfound": "myapp.views.notfound"
        },

        "i18n": {
            "lang": {
                "default": "en",
                "locales": [
                    { "code": "en", "name": "English", "native": "English" },
                    { "code": "hi", "name": "Hindi", "native": "हिंदी" }
                ]
            }
        },

        "routing": {
            "mounts": {
                "main": "/"
            },
            "main-settings": [
                { "name": "hashbang", "value": false },
                { "name": "lang", "value": false },
                { "name": "sensitive", "value": false }
            ],
            "main-interceptors": [
            ]
        }
    }
}